<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Foundation" parent="android:Widget" />


    <style name="Widget.Foundation.Card" parent="Widget.Material3.CardView.Filled" />

    <style name="Widget.Foundation.Card.Elevated" parent="Widget.Material3.CardView.Elevated" />


    <style name="Widget.Foundation.Button" parent="Widget.Material3.Button">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.Foundation.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeColor" tools:ignore="PrivateResource">@color/m3_text_button_foreground_color_selector</item>
    </style>

    <style name="Widget.Foundation.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="iconGravity">textStart</item>
    </style>


    <style name="Widget.Foundation.Checkbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:paddingStart">@dimen/l1</item>
        <item name="android:paddingEnd">@dimen/l1</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.Foundation.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:paddingStart">@dimen/l1</item>
        <item name="android:paddingEnd">@dimen/l1</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.Foundation.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
        <item name="android:layout_height">4dp</item>
    </style>

    <style name="Widget.Foundation.ProgressBar.Indeterminate" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:indeterminateTint">?colorPrimary</item>
    </style>

    <style name="Widget.Foundation.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:itemBackground">?colorSurfaceContainer</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.Foundation.Body</item>
    </style>

</resources>
