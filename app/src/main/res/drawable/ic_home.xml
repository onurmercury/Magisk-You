<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/checked" android:drawable="@drawable/ic_home_filled" android:state_checked="true"/>

    <item android:id="@+id/unchecked" android:drawable="@drawable/ic_home_outlined"/>

    <transition android:drawable="@drawable/avd_home_from_filled" android:fromId="@+id/checked" android:toId="@+id/unchecked"/>

    <transition android:drawable="@drawable/avd_home_to_filled" android:fromId="@+id/unchecked" android:toId="@id/checked"/>

</animated-selector>
