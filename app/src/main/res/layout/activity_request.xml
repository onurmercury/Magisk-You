<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.topjohnwu.magisk.ui.surequest.SuRequestViewModel" />

        <import type="android.text.Html" />

    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Foundation.Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/l1_50"
        android:layout_marginStart="@dimen/l1_75"
        android:layout_marginEnd="@dimen/l1_75"
        app:cardBackgroundColor="?attr/suRequestBackground">

        <LinearLayout
            android:id="@+id/su_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/l1_50"
            android:minWidth="350dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/app_icon"
                style="@style/View.Icon"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:padding="0dp"
                android:src="@{viewModel.icon}"
                app:tint="@null"
                tools:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/request_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/l1_50"
                android:gravity="center_horizontal"
                android:text="@{Html.fromHtml(@string/su_request(viewModel.title))}"
                android:textAppearance="@style/TextAppearance.Foundation.Title"
                tools:text="@string/su_request" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Foundation.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/l1_50"
                android:layout_marginBottom="@dimen/l1_50"
                app:cardBackgroundColor="?colorSurfaceVariant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/package_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/l_75"
                        android:layout_marginBottom="@dimen/l_75"
                        android:layout_marginStart="@dimen/l_75"
                        android:layout_marginEnd="@dimen/l_75"
                        android:gravity="center"
                        android:text="@{viewModel.packageName}"
                        android:textAppearance="@style/TextAppearance.Foundation.Caption"
                        tools:text="com.topjohnwu.magisk" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?attr/suRequestBackground"/>

                    <Spinner
                        android:id="@+id/timeout"
                        onTouch="@{() -> viewModel.spinnerTouched()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/l_75"
                        android:enabled="@{viewModel.grantEnabled}"
                        android:selection="@={viewModel.selectedItemPosition}"
                        app:items="@{@stringArray/allow_timeout}"
                        app:layout="@{@layout/item_spinner}" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/su_warning"
                android:textAppearance="@style/TextAppearance.Foundation.Body"
                android:textColor="?colorError"
                android:textStyle="bold"
                tools:text="@string/su_warning" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/l_75"
                android:layout_marginTop="@dimen/l1_50"
                app:strokeColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/grant_btn"
                        onTouch="@{viewModel.grantTouchListener}"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="@dimen/l_25"
                        android:enabled="@{viewModel.grantEnabled}"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:backgroundTint="?attr/suRequestButtonBackground"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:onClick="@{() -> viewModel.grantPressed()}"
                        android:text="@string/grant"
                        app:cornerRadius="@dimen/l_25" />

                    <Button
                        android:id="@+id/deny_btn"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:backgroundTint="?attr/suRequestButtonBackground"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:onClick="@{() -> viewModel.denyPressed()}"
                        android:text="@{viewModel.denyText}"
                        app:cornerRadius="@dimen/l_25"
                        tools:text="@string/deny" />


                    <requestFocus />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
