<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.topjohnwu.magisk.core.Info" />

        <import type="com.topjohnwu.magisk.ui.home.HomeViewModel.State" />

        <variable
            name="viewModel"
            type="com.topjohnwu.magisk.ui.home.HomeViewModel" />

    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Foundation.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/home_magisk_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/l1_25"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/home_magisk_barrier"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/home_magisk_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/l1"
                    android:text="@string/magisk"
                    android:textAppearance="@style/TextAppearance.Foundation.Title"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/l_25"
                    android:text="@string/home_installed_version"
                    android:textAppearance="@style/TextAppearance.Foundation.Body.Variant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/l_50"
                    android:text="@{viewModel.magiskInstalledVersion}"
                    android:textAppearance="@style/TextAppearance.Foundation.Body"
                    android:textStyle="bold"
                    tools:text="22.0 (22000)" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/l_25"
                    android:text="@string/zygisk"
                    android:textAppearance="@style/TextAppearance.Foundation.Body.Variant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/l_50"
                    android:text="@{Info.isZygiskEnabled ? @string/yes : @string/no}"
                    android:textAppearance="@style/TextAppearance.Foundation.Body"
                    android:textStyle="bold"
                    tools:text="Yes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/l_25"
                    android:text="Ramdisk"
                    android:textAppearance="@style/TextAppearance.Foundation.Body.Variant"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{Info.ramdisk ? @string/yes : @string/no }"
                    android:textAppearance="@style/TextAppearance.Foundation.Body"
                    android:textStyle="bold"
                    tools:text="Yes" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/home_magisk_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/l1_25"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    style="@style/Widget.Foundation.Button"
                    gone="@{viewModel.magiskState != State.OUTDATED}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:onClick="@{() -> viewModel.onMagiskPressed()}"
                    android:text="@string/update"
                    app:icon="@drawable/ic_update" />

                <Button
                    style="@style/Widget.Foundation.Button.Outlined"
                    gone="@{viewModel.magiskState == State.OUTDATED}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:onClick="@{() -> viewModel.onMagiskPressed()}"
                    android:text="@string/install" />

            </FrameLayout>

            <Button
                android:id="@+id/home_magisk_uninstall"
                style="@style/Widget.Foundation.Button.Outlined"
                goneUnless="@{Info.env.isActive}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/l1_25"
                android:onClick="@{() -> viewModel.onDeletePressed()}"
                android:text="Uninstall"
                app:layout_constraintBottom_toBottomOf="@id/home_magisk_barrier"
                app:layout_constraintEnd_toEndOf="parent"
                app:materialThemeOverlay="@style/ThemeOverlay.Foundation.Button.Text.Error" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/home_magisk_barrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?colorSurface"
                app:layout_constraintTop_toTopOf="@+id/home_magisk_barrier"
                app:layout_constraintBottom_toBottomOf="@+id/home_magisk_barrier" />

            <LinearLayout
                android:id="@+id/home_manager_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/l1_25"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_magisk_barrier"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/home_manager_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/l1"
                    android:text="@string/home_app_title"
                    android:textAppearance="@style/TextAppearance.Foundation.Title"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/l_25"
                    android:text="@string/home_latest_version"
                    android:textAppearance="@style/TextAppearance.Foundation.Body.Variant" />

                <TextView
                    android:id="@+id/home_manager_latest_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/l_50"
                    android:text="@{viewModel.managerRemoteVersion}"
                    android:textAppearance="@style/TextAppearance.Foundation.Body"
                    android:textStyle="bold"
                    tools:text="22.0 (22000) (16)" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/l_25"
                    android:text="@string/home_installed_version"
                    android:textAppearance="@style/TextAppearance.Foundation.Body.Variant" />

                <TextView
                    android:id="@+id/home_manager_installed_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/l_50"
                    android:text="@{viewModel.managerInstalledVersion}"
                    android:textAppearance="@style/TextAppearance.Foundation.Body"
                    android:textStyle="bold"
                    tools:text="22.0 (22000) (16)" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/l_25"
                    android:text="@string/home_package"
                    android:textAppearance="@style/TextAppearance.Foundation.Body.Variant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{context.packageName}"
                    android:textAppearance="@style/TextAppearance.Foundation.Body"
                    android:textStyle="bold"
                    tools:text="com.topjohnwu.magisk" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/home_manager_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/l1_25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_magisk_barrier">

                <Button
                    style="@style/Widget.Foundation.Button"
                    gone="@{viewModel.appState != State.OUTDATED}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:onClick="@{() -> viewModel.onManagerPressed()}"
                    android:text="@string/update"
                    app:icon="@drawable/ic_update" />

                <Button
                    style="@style/Widget.Foundation.Button.Outlined"
                    gone="@{viewModel.appState != State.UP_TO_DATE}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:onClick="@{() -> viewModel.onManagerPressed()}"
                    android:text="@string/install" />

            </FrameLayout>

            <ProgressBar
                style="@style/Widget.Foundation.ProgressBar"
                gone="@{viewModel.stateManagerProgress == 0 || viewModel.stateManagerProgress == 100}"
                android:layout_width="0dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/l_75"
                android:max="100"
                android:progress="@{viewModel.stateManagerProgress}"
                app:layout_constraintEnd_toEndOf="@+id/home_manager_button"
                app:layout_constraintStart_toStartOf="@+id/home_manager_button"
                app:layout_constraintTop_toBottomOf="@+id/home_manager_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
